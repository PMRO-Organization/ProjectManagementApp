@model Project_DomainEntities.TodoListModel

@{
	ViewData["Title"] = "Create";
	Layout = "_Layout";
}

<h4>Create To Do List</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create"asp-controller="TodoList" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<input asp-for="UserId" type="hidden" value="@Model.UserId"/>
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn" style="background-color: #671dff; color: white; font-weight: 500;" />
				<a asp-action="Briefly" class="btn btn-primary">Back</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
