@using Project_DomainEntities
@using Project_Main.Infrastructure.Helpers
@model Project_Main.Models.ViewModels.OutputModels.TaskDetailsVM

@{
	ViewData["Title"] = "Delete";
}

<div>
	<h4>Delete Task</h4>
	<hr />
	<h5>Are you sure you want to delete this?</h5>

	<partial name="@SharedViews.TaskTableDetails" model="@Model" />

	<form asp-action="@TaskCtrl.DeletePostAction" asp-controller="@TaskCtrl.Name" method="post">
		<input type="hidden" asp-for="TodoListId" value="@Model.TodoListId" />
		<input type="hidden" asp-for="Id" value="@Model.Id" />
		<input type="submit" value="Delete" class="btn btn-danger" />
	</form>
	<a asp-controller="@TodoListCtrl.Name" asp-action="@TodoListCtrl.DetailsAction" asp-route-id="@Model.TodoListId" class="btn btn-primary">Back</a>
</div>
