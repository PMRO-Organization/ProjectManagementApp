@model Project_Main.Models.ViewModels.TodoListViewModels.DeleteListViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}

<div>
    <h4>Delete To Do List</h4>
    <h5>Are you sure you want to delete this?</h5>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ListModel.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ListModel.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Tasks")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TasksCount)
        </dd>
    </dl>
    
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ListModel.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Briefly" class="btn btn-primary">Back</a>
    </form>
</div>
