    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}

<div>
    <h4>Delete To Do List</h4>
    <h5>Are you sure you want to delete this?</h5>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
